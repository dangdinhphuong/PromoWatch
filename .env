# Server
PORT=4000
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgres://user:password@localhost:5432/promowatch

# External API allowlist (comma-separated hostnames)
API_ALLOWLIST=api.github.com

# Cron
CRON_ENABLED=true
CRON_SCHEDULE=*/1 * * * *
CRON_DB_PING=false
CRON_SERIAL=true

# Dichvucong crawler
DVC_RECORDS_PER_PAGE=500
DVC_MAX_PAGES=0
DVC_CRON_ENABLED=true
DVC_CRON_SCHEDULE=*/1 * * * *
VTR_CRON_ENABLED=true
VTR_CRON_SCHEDULE=*/1 * * * *
BGG_CRON_ENABLED=true
BGG_CRON_SCHEDULE=*/1 * * * *